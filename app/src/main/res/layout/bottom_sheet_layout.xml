<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancelIv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        android:src="@drawable/cross" />

    <TextView
        android:id="@+id/headingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.8"
        android:gravity="center"
        android:text="djfbbf0"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/catView"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:background="#dad4D4" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/doneBtn"
        android:layout_width="160dp"
        android:layout_height="58.58dp"
        android:layout_above="@id/btmHeader"
        android:layout_gravity="center"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="6.50dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/black"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"

        app:cornerRadius="10.40dp" />

</LinearLayout>
